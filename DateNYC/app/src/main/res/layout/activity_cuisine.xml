<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/foodEditText"
            android:hint="Search For Food Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/submitButton"
            android:text="Search"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/latest_news_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.25">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:id="@+id/asian_card"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/asian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/latest_news_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asian"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:background="#76000000"
                        />
                </FrameLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/american_card"
                android:layout_weight="0.5"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/american"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBQ"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>

                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/latest_news_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.25">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/indian_card"
                android:layout_weight="0.5"
                android:background="#333333"
                android:layout_margin="1dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/indian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Indian"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/italian_card"
                android:layout_weight="0.5"
                android:background="#333333"
                android:layout_margin="1dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/italian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Italian"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/latest_news_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.25">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:id="@+id/mexican_card"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mexican"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mexican"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:id="@+id/meditteranean_card"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/meditteranean"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_6_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Meditteranean"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/latest_news_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.25">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/thai_card"
                android:layout_weight="0.5"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/thai"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_7_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Thai"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:id="@+id/veagan_card"
                android:layout_margin="1dp"
                android:background="#333333">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/veagan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/latest_news_8_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vegan"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#76000000"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</layout>
