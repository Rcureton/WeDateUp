<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    tools:context=".View.RestaurantActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/colorAccent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/restdetails_author"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/restdetails_rating"
                android:layout_below="@id/restdetails_author"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/restdetails_reviews"
                android:layout_below="@id/restdetails_rating"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>






